   "source": [
    "# sinartisi gia ton upologismo tou area \n",
    "def area_of_triangle(b, h):\n",
    "    area = (b * h) / 2\n",
    "    return area\n",
    "\n",
    "\n",
    "b = float(input(\"Enter b: \"))\n",
    "h = float(input(\"Enter h: \"))\n",
    "print(\"Area of triangle with b = \" + str(b) + \" and h = \" + str(h) + \" is: \" + str(area_of_triangle(b, h)))"
   ]
